<!DOCTYPE html>
<html lang = "en">
    <head>
    <title>Events</title>    
    </head>



<div class="container mt-3 p-5 my-5">
<h1>Events</h1>

<table class="table">
  <thead class="table-secondary">
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= button_to 'Show', event, class:"btn btn-secondary btn-sm" %></td>
        <td><%= button_to 'Edit', edit_event_path(event), class:"btn btn-secondary btn-sm" %></td>
        <td><%= button_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-secondary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
</div>
