<div class = "container p-5">

<h1>Search Results</h1>    
    
<h3 id="organizations-text">Organizations</h3>
<table class="table">
  <thead class="table-secondary">
    <tr>
      <th><%= link_to "Name", :sort => "name"%></th>
      <th><%= link_to "Organization Type", :sort => "category"%></th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matchOrganizations.each do |organization| %>
      <tr>
        <td><%= link_to "#{organization.name}", "#{organization.web_address}",:target => '_blank', class: 'nav-item-primary' %></td>
        <td><%= organization.category %></td>
        <td colspan="2"></td>
        <td><%= link_to 'More Details', organization, class:"btn btn-primary btn-sm"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3 id="events-text">Events</h3>
<table class="table">
  <thead class="table-secondary">
    <tr>
      <th><%= link_to "Name", :sort => "name"%></th>
      <th><%= link_to "Date", :sort => "date"%></th>
      <th><%= link_to "Start time", :sort => "start_time"%></th>
      <th><%= link_to "End time", :sort => "end_time"%></th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>

    <% @matchEvents.each do |event| %>
      <tr>
        <td><%= link_to "#{event.name}", "#{event.link}", :target => '_blank', class: "nav-item-secondary"  %></td>
        <td><%= event.date %></td>
        <td><%= event.start_time.strftime("%I:%M%p") %></td>
        <td><%= event.end_time.strftime("%I:%M%p") %></td>
        <td><%= link_to 'More Details', event, class:"btn btn-secondary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
