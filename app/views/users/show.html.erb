<html lang = "en">
    <head>
    <title>Profile</title>    
    </head>

<div class="container p-5 my-5 bg-light text-dark">
    <h1>Volunteer Profile</h1>
            <p>
        <strong>Primary Email:</strong>
        <%= @user.email %>
    </p>
    
    <button type="button" class="btn btn-primary mb-5">
          <a class="nav-item"><%= link_to "Edit Information", edit_user_registration_path %></a>
    </button>

        


<h2>Events Calendar</h2>
    <%= month_calendar(events: @user.events) do |date, meetings| %>
      <%= date.day %>
    <% meetings.each do |meeting| %>
    <div class="container bg-secondary cal-meeting">
      <%= link_to "#{meeting.name}", meeting, class: "white-link" %>
      <p id="cal-time"><%= meeting.start_time.strftime("%I:%M %p") %> - <%= meeting.end_time.strftime("%I:%M %p") %></p>  
    </div>
  <% end %>
    <% end %>

        </div>
       
    
    
    
    
<div class="container bg-primary mt-3 p-5 my-5">
    <h1 style="color:white">Registered Events</h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">
    
        <% @user.events.each do |event| %>
        <div class="col">  
        <div class="card">
          <%= image_tag "#{event.organization.image}", alt: "Homepage logo with two smiling faces", width:"100%", height:"200px", crop:"pad" =%>
          <div class="card-body">
            <h4 class="card-title"> <%= event.name %> </h4>
            <p class="card-text"> <%= event.date %> </p>
            <p class="card-text"> <strong> Start: </strong> <%= event.start_time.strftime("%I:%M%p")  %> </p>
            <p class="card-text"> <strong> End: </strong> <%= event.end_time.strftime("%I:%M%p")  %> </p>
          </div>
        </div>
        </div>
        <% end %>
    </div>
    
</div>